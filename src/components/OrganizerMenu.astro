---
import Icon from "./Icon.astro";

export interface Props {
	meetupId: number
}

const { meetupId } = Astro.props

---

<div class="horizontally-scrollable">
	<nav class="organizer">
		<strong>Hallinnoi:</strong>
		<a class="button button-alt2" href={`/meetups/edit/${meetupId}`}>
			<Icon href="/icons/edit-1.svg" size={1.25} />
			Tiedot
		</a>
		<a class="button button-alt2" href={`/meetups/participants/${meetupId}`} title="Osallistujat ja j채rjest채j채t">
			<Icon href="/icons/users-more.svg" size={1.25} />
			Osallistujat
		</a>
		<a class="button button-alt2" href={`/meetups/messages/${meetupId}`}>
			<Icon href="/icons/mail.svg" size={1.25} />
			Viestint채
		</a>
	</nav>
</div>
<style>
	.organizer {
		align-items: center;
		background: var(--border-color);
		border-top: thin solid var(--border-color);
		display: inline-flex;
		font-size: 0.875rem;
		gap: 0.5rem;
		justify-content: flex-end;
		min-width: 100%;
		padding: 0.5rem;
		white-space: nowrap;
	}

	@media (min-width: 70em) {
		.organizer {
			border-bottom-left-radius: 0.375rem;
			border-bottom-right-radius: 0.375rem;
		}
	}

	.organizer .button {
		font-size: 0.875rem;
		min-width: 0;
		padding: 0.5rem 1rem;
	}

	.organizer .button :global(svg) {
		width: 1.25rem;
	}
</style>
