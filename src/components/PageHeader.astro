---
import Breadcrumbs from "./Breadcrumbs.astro";
import type { BreadcrumbLink } from "./Breadcrumbs.astro";

export interface Props {
	breadcrumbs?: BreadcrumbLink[]
}

const { breadcrumbs = [] } = Astro.props

---

<nav>
	<ul>
		<li><a href="/">Etusivu</a></li>
		<li><a href="/meetups">Miitit</a></li>
		<li><a href="/places">Miittipaikat</a></li>
		<li><a href="/profile">Omat tiedot</a></li>
	</ul>
</nav>
<header>
	<a aria-hidden="false" hidden href="#main">Hyppää sisältöön</a>
	<img alt="" aria-hidden="true" height="73" width="73" src="/assets/2018-07-14_tengwa_mellon.png" />
	Mellon
</header>
<Breadcrumbs links={breadcrumbs}>
	<slot />
</Breadcrumbs>
<style>
	header {
		border-top: 3px double #694916;
		font-family: var(--font-serif);
		font-size: 3.75rem;
		font-weight: bold;
		padding-top: 1rem;
		text-align: center;
	}

	header+:global(main) {
		border-top: 3px double #694916;
		margin-top: 1rem;
	}

	ul {
		display: flex;
		flex-wrap: wrap;
		font-weight: bold;
		justify-content: center;
		gap: 0 0.5rem;
		margin: 0;
	}

	li {
		display: inline;
	}

	nav a {
		display: block;
		padding: 0.5rem;
	}
</style>
